{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "backend/app/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend"
    }
  ]
}
